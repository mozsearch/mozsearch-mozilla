#!/usr/bin/env bash

set -x # Show commands
set -eu # Errors/undefined vars are fatal
set -o pipefail # Check all commands in a pipeline

date

echo Uploading comm-beta
pushd $INDEX_ROOT
$CONFIG_REPO/shared/git-maintenance.sh ./git
tar cf - git | lz4 - comm-beta.tar.lz4
$AWS_ROOT/upload.py $INDEX_ROOT/comm-beta.tar.lz4 searchfox.repositories comm-beta.tar.lz4
rm comm-beta.tar.lz4
popd

date

echo Uploading comm-beta blame
pushd $INDEX_ROOT
$CONFIG_REPO/shared/git-maintenance.sh ./blame
tar cf - blame | lz4 - comm-beta-blame.tar.lz4
$AWS_ROOT/upload.py $INDEX_ROOT/comm-beta-blame.tar.lz4 searchfox.repositories comm-beta-blame.tar.lz4
rm comm-beta-blame.tar.lz4
popd

date
